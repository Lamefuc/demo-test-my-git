@model Reader.Models.TblPost
@{
    ViewData["Title"] = "Tạo mới bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminPosts" asp-action="Index">Danh sách bài viết</a></li>
            <li class="breadcrumb-item active">Tạo mới bài viết</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body" style="padding: 50px ;">
                    <form asp-controller="AdminPosts" asp-action="Create" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Sview" value="1"/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       
                        <div class="card">
                            <div class="card-body">
                                <div class="tab-content pt-2" id="borderedTabJustifiedContent">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">
                                        <h5 class="card-title">Tạo mới bài viết</h5>
                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Tiêu đề</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" asp-for="Title">
                                            </div>
                                        </div>


                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Mô tả ngắn</label>
                                            <div class="col-sm-10">
                                                <textarea asp-for="SubContents" id="Abstract"> </textarea>
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Nội dung</label>
                                            <div class="col-sm-10">
                                                <textarea id="Contents" asp-for="Contents"></textarea>
                                            </div>
                                        </div>
                                     
                                        <div class="row mb-4">
                                            <label class="col-sm-2 col-form-label">Danh mục</label>
                                            <div class="col-sm-10">
                                                <select class="form-select" aria-label="Default select example" asp-for="CategoryId" asp-items="ViewBag.DanhMuc">
                                                    <option value="All" selected="" disabled="">Chọn danh mục</option>

                                                </select>
                                            </div>
                                        </div>



                                        <div class="row mb-4">
                                            <label for="Thumb" class="col-sm-2 col-form-label">Ảnh đại diện</label>
                                            <div class="col-sm-10">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <button class="btn btn-secondary" type="button" onclick="openDialog()">Chọn ảnh</button>
                                                    </div>
                                                    <input asp-for="Thumb" type="text" class="form-control" id="file_input" aria-describedby="button-addon2" />
                                                    <span asp-validation-for="Thumb" class="text-danger"></span>

                                                </div>
                                            </div>
                                           
                                        </div>

                                       


                                        <div class="row mb-4">
                                            <label for="inputNumber" class="col-sm-2 col-form-label">Trạng thái</label>
                                            <div class="col-sm-10">

                                                <div class="d-flex">
                                                    <div class="col-md-4 form-check form-switch" style="padding-bottom: 8px !important;">
                                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                                        <label for="IsActive" class="form-check-label">Công khai</label>
                                                    </div>

                                                    <div class="col-md-4 form-check form-switch" style="padding-bottom: 8px !important;">
                                                        <input asp-for="IsHot" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                                        <label for="IsHot" class="form-check-label">Tin hót</label>
                                                    </div>

                                                    <div class="col-md-4 form-check form-switch" style="padding-bottom: 8px !important;">
                                                        <input asp-for="IsNewfeed" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                                        <label for="IsNewfeed" class="form-check-label">Tin mới</label>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>


                                        <button class="btn btn-primary">
                                            <i class="anticon anticon-save"></i>
                                            <span>Save</span>
                                        </button>
                                    </div>

                                  

                                </div><!-- End Bordered Tabs Justified -->

                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@*Kích hoạt summernote*@


@{
    var summerNote = new Reader.Areas.Admin.Models.SummerNote("#Contents");
    var summerNote2 = new Reader.Areas.Admin.Models.SummerNote("#Abstract", false);

    <partial name="_SummerNote" model="summerNote" />
    <partial name="_SummerNote" model="summerNote2" />
}