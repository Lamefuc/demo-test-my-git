@model Reader.Models.TblRole
@{
    ViewData["Title"] = "Xác nhận xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Thông tin quyền truy cập</a></li>
            <li class="breadcrumb-item active">Thông tin chi tiết</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">xác nhận quyền truy cập</h4>


                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">
                            <form style="padding-top: 30px !important;" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-RoleID="@Model.RoleId" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="RoleId" />

                                <div class="mb-4">
                                    <label for="inputText" class="col-sm-2 col-form-label">ID:</label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="RoleId" class="form-control" disabled>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="inputText" class="col-sm-2 col-form-label">Tên quyền:</label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="RoleName" class="form-control" disabled>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="inputText" class="col-sm-2 col-form-label">Mô tả:</label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="Description" class="form-control" disabled>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="col-sm-10">
                                        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                                    </div>

                                </div>

                            </form><!-- End General Form Elements -->


                        </div>


                    </div><!-- End Bordered Tabs Justified -->
                    <!-- General Form Elements -->


                </div>


            </div>
        </div>
    </div>
</div>





