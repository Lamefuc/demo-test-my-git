@model Reader.Models.TblRole
@{
    ViewData["Title"] = "Thông tin chi tiết quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Thông tin quyền truy cập</a></li>
            <li class="breadcrumb-item active">Thông tin chi tiết</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Thông tin quyền truy cập</h4>

                    <table class="table">

                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Tên quyền</th>
                                <th scope="col">Mô tả</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">@Model.RoleId</th>
                                <td>@Model.RoleName</td>
                                <td>@Model.Description</td>

                            </tr>

                        </tbody>
                    </table>

                </div>


            </div>
        </div>
    </div>
</div>


