@model Reader.Models.TblMenu
@{
    ViewData["Title"] = "Chi tiết menu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminMenus" asp-action="Index">Danh sách menu</a></li>
            <li class="breadcrumb-item active">Chi tiết menu: @Model.MenuName</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body" style="padding: 50px ;">
                    <form>
                        <div class="card">
                            <div class="card-body">

                                <div class="row d-flex align-items-center justify-content-between">

                                    <div class="col-6">
                                       
                                    </div>

                                    <div class="col-6" style="text-align: -webkit-right !important">

                                        <div class="col-md-4" style="text-align: right !important;">
                                            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminMenus" asp-action="Edit" asp-route-menuID="@Model.MenuId">
                                                <i class="bx bx-highlight m-r-5"></i>
                                                <span>Chỉnh sửa</span>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card" style="padding-top: 50px !important">
                            <div class="card-body">
                                <div class="tab-content pt-2" id="borderedTabJustifiedContent">

                                    <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">
                                        <div class="table-responsive">
                                            <table class="table table-hover e-commerce-table" style="margin-bottom: 50px !important;">
                                                <tbody>
                                                    <tr>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">ID:</td>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">@Model.MenuId</td>
                                                    </tr>
                                                    <tr>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">Tên menu:</td>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">@Model.MenuName</td>
                                                    </tr>

                                              
                                                        <tr>
                                                            <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">Thuộc danh mục:</td>
                                                            
                                                                @if(Model.CategoryId != null) {
                                                                    <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">
                                                                               @Model.Category.CategoryName
                                                                    </td>
                                                                }
                                                                else {
                                                                    <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">
                                                                        <span class="badge bg-info">
                                                                              <i class=" bx bx-x"></i>
                                                                              No
                                                                        </span>
                                                                    </td>
                                                                }
                                                           
                                                        </tr>
                                                    
                                                    
                                                    <tr>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">Cấp:</td>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">@Model.Levels  </td>
                                                    </tr>

                                                     <tr>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">Thứ tự:</td>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">@Model.MenuOrder </td>
                                                    </tr>
                                                    <tr>
                                                       <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">Vị trí:</td>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">
                                                            @Model.Position 
                                                        </td>
                                                       
                                                    </tr>

                                                    

                                                    <tr>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">Trạng thái:</td>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">
                                                            @if (Model.IsActive)
                                                            {
                                                                <div class="form-check form-switch" style="padding-bottom: 8px !important;">
                                                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" disabled>
                                                                    <label for="IsActive" class="form-check-label"></label>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="form-check form-switch" style="padding-bottom: 8px !important;">
                                                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" disabled>
                                                                    <label for="Active" class="form-check-label"></label>
                                                                </div>
                                                            }
                                                        </td>
                                                    </tr>

                                                   
                                                    <tr>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">Ngày tạo:</td>
                                                        <td style="padding: 1rem !important; vertical-align:-webkit-baseline-middle !important;">
                                                            @if(Model.CreatedDate != null) {
                                                                @Model.CreatedDate.Value.ToString("dd/MM/yyyy")
                                                            }
                                                        </td>
                                                    </tr>

                                                </tbody>


                                            </table>

                                        </div>

                                    </div>
                                </div><!-- End Bordered Tabs Justified -->

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</section>

