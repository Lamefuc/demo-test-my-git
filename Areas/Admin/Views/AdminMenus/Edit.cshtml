@model Reader.Models.TblMenu
@{
    ViewData["Title"] = "Chỉnh sửa menu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminMenus" asp-action="Index">Danh sách menu</a></li>
            <li class="breadcrumb-item active">Chỉnh sửa menu : @Model.MenuName</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<hr />
<div class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        Chỉnh sửa menu : <button type="button" class="btn btn-primary mb-2">@Model.MenuName <span class="badge bg-white text-primary"> @Model.MenuId</span>
                        </button>
                    </h4>

                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">
                            <form style="padding-top: 30px !important;" asp-area="Admin" asp-controller="AdminMenus" asp-action="Edit" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="MenuId" />
                                <input type="hidden" asp-for="CreatedDate" />
                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Tên menu</label>
                                    <div class="col-sm-12">
                                        <input type="text" asp-for="MenuName" class="form-control">
                                    </div>
                                </div>


                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Menu cha</label>
                                    <div class="col-sm-12">
                                        <select class="form-select" aria-label="Default select example" asp-for="ParentId" asp-items="@(new SelectList(ViewBag.MenuList, "Value", "Text"))">
                                            <option value="All" selected="" disabled="">Chọn menu cha</option>

                                        </select>
                                    </div>
                                </div>



                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Danh mục</label>
                                    <div class="col-sm-12">
                                        <select class="form-select" aria-label="Default select example" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.CategoryList, "Value", "Text"))">
                                            <option value="All" selected="" disabled="">Chọn danh mục</option>

                                        </select>
                                    </div>
                                </div>


                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Cấp</label>
                                    <div class="col-sm-12">
                                        <input type="number" asp-for="Levels" class="form-control">
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Thứ tự</label>
                                    <div class="col-sm-12">
                                        <input type="number" asp-for="MenuOrder" class="form-control">
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Vị trí</label>
                                    <div class="col-sm-12">
                                        <input type="number" asp-for="Position" class="form-control">
                                    </div>
                                </div>


                                <div class="mb-3">

                                    <label for="inputNumber" class="col-sm-2 col-form-label">Trạng thái</label>

                                    <div class="col-sm-10">
                                        <div class="form-check form-switch" style="padding-bottom: 8px !important;">
                                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                            <label for="IsActive" class="form-check-label">Công khai</label>
                                        </div>
                                    </div>
                                </div>


                                <div class="mb-3">
                                    <div class="col-sm-12">
                                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                                    </div>

                                </div>

                            </form><!-- End General Form Elements -->


                        </div>


                    </div><!-- End Bordered Tabs Justified -->
                    <!-- General Form Elements -->

                </div>
            </div>
        </div>
    </div>
</div>



