@model Reader.Models.TblCategory
@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh sách danh mục</a></li>
            <li class="breadcrumb-item active">Chỉnh sửa danh mục</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body" style="padding: 50px ;">
                    <form asp-controller="AdminCategories" asp-action="Edit" asp-route-categoryID="@Model.CategoryId" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CategoryId" />
                        <input type="hidden" asp-for="ParentId" />
                        <input type="hidden" asp-for="Levels" />
                
                        <div class="card" style="padding-top: 50px !important">
                            <div class="card-body">
                                <div class="tab-content pt-2" id="borderedTabJustifiedContent">
                                <h5 class="card-title">Chỉnh sửa danh mục</h5>

                                    <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">

                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Tên danh mục</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" asp-for="CategoryName">
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label class="col-sm-2 col-form-label">Danh mục cha</label>
                                            <div class="col-sm-10">
                                                <select class="form-select" aria-label="Default select example" asp-for="ParentId" asp-items="@(new SelectList(ViewBag.CategoryList, "Value", "Text"))">
                                                   

                                                </select>
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="Thumb" class="col-sm-2 col-form-label">Ảnh đại diện</label>
                                            <div class="col-sm-10">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <button class="btn btn-secondary" type="button" onclick="openDialog()">Chọn ảnh</button>
                                                    </div>
                                                    <input asp-for="Thumb" type="text" class="form-control" id="file_input" aria-describedby="button-addon2" />
                                                    <span asp-validation-for="Thumb" class="text-danger"></span>

                                                </div>
                                            </div>

                                        </div>


                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Thứ tụ sắp xếp</label>
                                            <div class="col-sm-10">
                                                <input type="number" asp-for="CategoryOrder" class="form-control">
                                            </div>
                                        </div>



                                        <div class="row mb-4">
                                            <label for="inputNumber" class="col-sm-2 col-form-label">Mô tả thêm</label>

                                            <div class="col-sm-10">
                                                <textarea id="Description" asp-for="Description" style="width: 100% !important; min-height: 400px !important;"></textarea>
                                            </div>
                                        </div>

                                          <div class="row mb-4">
                                            <label for="inputNumber" class="col-sm-2 col-form-label">Hiển thị trang chủ</label>
                                            <div class="col-sm-10">
                                                <div class="form-check form-switch" style="padding-bottom: 8px !important;">
                                                    <input asp-for="HomeFlag" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                                    <label for="Active" class="form-check-label">Công khai</label>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputNumber" class="col-sm-2 col-form-label">Trạng thái</label>
                                            <div class="col-sm-10">
                                                <div class="form-check form-switch" style="padding-bottom: 8px !important;">
                                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                                    <label for="Active" class="form-check-label">Công khai</label>
                                                </div>

                                            </div>
                                        </div>

                                        
                                           <button class="btn btn-primary">
                                                <i class="anticon anticon-save"></i>
                                                <span>Save</span>
                                            </button>
                                       


                                    </div>

                                    

                                </div><!-- End Bordered Tabs Justified -->

                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@*Kích hoạt summernote*@


@{
    var summerNote = new Reader.Areas.Admin.Models.SummerNote("#Description");

    <partial name="_SummerNote" model="summerNote" />
}