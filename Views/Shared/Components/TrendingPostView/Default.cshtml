@using Reader.Models;
@using Reader.Utilities;
@using Microsoft.AspNetCore.Http;

@model IList<TblPost>

<div class="col-lg-4 mb-5">
    <h2 class="h5 section-title">Bài viết nổi bật</h2>

    @foreach(var item in Model) {
        string url = Functions.TitleSlugGeneration("post", item.Title, item.PostId);
        <article class="card mb-4">
            <div class="card-body d-flex">
                @if(item.Thumb != null) {
                    <img class="card-img-sm" src="@item.Thumb">

                }else {
                    <img class="card-img-sm" src="~/assets/images/post/post-3.jpg">

                }
                <div class="ml-3">
                    <h4><a href="/@url" class="post-title">@item.Title</a></h4>
                    <ul class="card-meta list-inline mb-0">
                        <li class="list-inline-item mb-0">
                            <i class="ti-calendar"></i>@item.CreatedDate.Value.ToString("dd/MM/yyyy")
                        </li>
                        <li class="list-inline-item mb-0">
                            <i class="ti-timer"></i>2 phút đọc
                        </li>
                    </ul>
                </div>
            </div>
        </article>


    }
</div>
