@using Reader.Models
@using Reader.Utilities
@model IList<ViewCategory>

<div class="col-lg-8 mb-5 mb-lg-0">
    @foreach (var cat in Model)
    {
        string urlList = Functions.TitleSlugGeneration("list-cat", cat.CategoryName, cat.CategoryId);
        <h2 class="h5 section-title">@cat.CategoryName</h2>
        <article class="card mb-4">
            <div class="row card-body">
                <div class="col-12">
                    <h3 class="h4 mb-3"><a class="post-title" href="/@urlList">@cat.Title</a></h3>
                    <ul class="card-meta list-inline">
                        <li class="list-inline-item">
                            <a href="author-single.html" class="card-meta-author">
                                <img src="~/assets/images/john-doe.jpg" alt="Kate Stone">
                                <span>Huy Phước</span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <i class="ti-timer"></i>2 phút đọc
                        </li>
                        <li class="list-inline-item">
                            <i class="ti-calendar"></i>30/05/2023
                        </li>

                    </ul>
                    <p>@Html.Raw(cat.Description)</p>
                    <a href="/@urlList" class="btn btn-outline-primary">Xem thêm</a>
                </div>
            </div>
        </article>


        @foreach (var item in cat.Posts)
        {
            string url = Functions.TitleSlugGeneration("post", item.Title, item.PostId);
            <article class="card mb-4">
                <div class="row card-body">
                    <div class="col-md-4 mb-4 mb-md-0">
                        <div class="post-slider slider-sm">
                            @if (item.Thumb != null)
                            {
                                <img src="@item.Thumb" class="card-img" alt="post-thumb" style="height:200px; object-fit: cover;">

                            }
                            else
                            {
                                <img src="~/assets/images/post/post-7.jpg" class="card-img" alt="post-thumb" style="height:200px; object-fit: cover;">

                            }
                        </div>
                    </div>
                    <div class="col-md-8">
                        <h3 class="h4 mb-3"><a class="post-title" href="/@url">@item.Title</a></h3>
                        <ul class="card-meta list-inline">
                            <li class="list-inline-item">
                                <a href="author-single.html" class="card-meta-author">
                                    <img src="~/assets/images/john-doe.jpg">
                                    <span>Huy Phước</span>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <i class="ti-timer"></i>2 phút đọc
                            </li>
                            <li class="list-inline-item">
                                <i class="ti-calendar"></i>@item.CreatedDate.Value.ToString("dd/MM/yyyy")
                            </li>
                            <li class="list-inline-item">
                                <ul class="card-meta-tag list-inline">
                                    <li class="list-inline-item"><a href="#">VN</a></li>
                                    <li class="list-inline-item"><a href="#">TQ</a></li>
                                    <li class="list-inline-item"><a href="#">HQ</a></li>
                                </ul>
                            </li>
                        </ul>
                        <p>@Html.Raw(item.SubContents)</p>
                        <a href="/@url" class="btn btn-outline-primary">Xem thêm</a>
                    </div>
                </div>
            </article>
        }
        <ul class="pagination justify-content-center">
            <li class="page-item page-item active ">
                <a href="#!" class="page-link">1</a>
            </li>
            <li class="page-item">
                <a href="#!" class="page-link">2</a>
            </li>
            <li class="page-item">
                <a href="#!" class="page-link">&raquo;</a>
            </li>
        </ul>
    }






</div>




