@using Reader.Models;
@model Reader.Models.TblPost;

@{
    ViewData["Title"] = "Chi tiết bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<!-- /navigation -->
<div class="py-4"></div>

<section class="section">
    <div class="container">
        <div class="row">
            <div class=" col-lg-8 mb-5 mb-lg-0">
                <article>
                    <div class="post-slider mb-4">
                        @if(Model.Thumb != null) {
                            <img src="@Model.Thumb" class="card-img" alt="post-thumb">

                        }else {
                            <img src="~/assets/images/post/post-10.jpg" class="card-img" alt="post-thumb">

                        }
                    </div>
                    <h1 class="h2">@Model.Title</h1>
                    <ul class="card-meta my-3 list-inline">
                        <li class="list-inline-item">
                            <a href="#" class="card-meta-author">
                                <img src="~/assets/images/john-doe.jpg" alt="John Doe">
                                <span>Huy Phước</span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <i class="ti-timer"></i>3 phút đọc
                        </li>
                        <li class="list-inline-item">
                            <i class="ti-calendar"></i>@Model.CreatedDate.Value.ToString("dd/MM/yyyy")
                        </li>
                        <li class="list-inline-item">
                            <ul class="card-meta-tag list-inline">
                                <li class="list-inline-item"><a href="tags.html">Hữu ích</a></li>
                                <li class="list-inline-item"><a href="tags.html">Xem nhiều</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="content">
                        <h4 id="heading-example">Nội dung bài viết</h4>
                        <p>
                            @Html.Raw(Model.Contents)
                        </p>
                        
                        
                    </div>
                </article>
                <div class="mt-5">
                    <div class="mb-5 border-top mt-4 pt-5">
                        <h3 class="mb-4">Bình luận</h3>
                        <div class="media d-block d-sm-flex mb-4 pb-4">
                            <a class="d-inline-block mr-2 mb-3 mb-md-0" href="#">
                                <img src="~/assets/images/post/user-02.jpg" class="mr-3 rounded-circle" alt="">
                            </a>
                            <div class="media-body">
                                <a href="#!" class="h4 d-inline-block mb-3">Huy Phước</a>
                                <p>Bài viết rất hay và ý nghĩa</p>
                                <span class="text-black-800 mr-3 font-weight-600">April 18, 2020 at 6.25 pm</span>
                                <a class="text-primary font-weight-600" href="#!">Trả lời</a>
                            </div>
                        </div>

                        <div class="media d-block d-sm-flex mb-4 pb-4">
                            <a class="d-inline-block mr-2 mb-3 mb-md-0" href="#">
                                <img src="~/assets/images/post/user-02.jpg" class="mr-3 rounded-circle" alt="">
                            </a>
                            <div class="media-body">
                                <a href="#!" class="h4 d-inline-block mb-3">Huy Phước</a>
                                <p>Bài viết rất hay và ý nghĩa</p>
                                <span class="text-black-800 mr-3 font-weight-600">April 18, 2020 at 6.25 pm</span>
                                <a class="text-primary font-weight-600" href="#!">Trả lời</a>
                            </div>
                        </div>
                        
                    </div>
                    <div>
                        <h3 class="mb-4">Hãy để lại bình luận</h3>
                        <form method="POST">
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <textarea class="form-control shadow-none" name="comment" rows="7" required></textarea>
                                </div>
                                <div class="form-group col-md-4">
                                    <input class="form-control shadow-none" type="text" placeholder="Họ và tên" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <input class="form-control shadow-none" type="email" placeholder="Email" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <input class="form-control shadow-none" type="url" placeholder="Website">
                                    <p class="font-weight-bold valid-feedback">OK! Cảm ơn bạn đã phản hồi.</p>
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Bình luận</button>
                        </form>
                    </div>
                </div>
            </div>
            <aside class="col-lg-4 @@sidebar">
                
                <!-- Search -->
                <div class="widget">
                    <h4 class="widget-title"><span>Tìm kiếm</span></h4>
                    <form action="#!" class="widget-search">
                        <input class="mb-3" id="search-query" name="s" type="search" placeholder="Bạn muốn tìm gì?...">
                        <i class="ti-search"></i>
                        @*<button type="submit" class="btn btn-primary btn-block">Tìm kiếm</button>*@
                    </form>
                </div>
                @await Component.InvokeAsync("RecentPostsView")
                

                <!-- Social -->
                <div class="widget">
                    <h4 class="widget-title"><span>Liên hệ với chúng tôi</span></h4>
                    <ul class="list-inline widget-social">
                        <li class="list-inline-item"><a href="#"><i class="ti-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="ti-twitter-alt"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="ti-linkedin"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="ti-github"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="ti-youtube"></i></a></li>
                    </ul>
                </div>
                <!-- categories -->
