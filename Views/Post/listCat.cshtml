@using Reader.Models
@using Reader.Utilities
@model ViewCategory


@{
    ViewData["Title"] = "Danh sách bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="py-4"></div>
<section class="section-sm">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8 mb-5 mb-lg-0">
                
                    <h2 class="h5 section-title">@Model.CategoryName</h2>
                    <div class="row">
                        @if (Model.Posts.Count > 0)
                    {
                        @foreach (var item in Model.Posts)
                        {
                            string url = Functions.TitleSlugGeneration("post", item.Title, item.PostId);
                            <div class="col-lg-6 col-sm-6">
                                <article class="card mb-4">
                                    <div class="post-slider slider-sm">
                                        @if (item.Thumb != null)
                                        {
                                            <img src="@item.Thumb" class="card-img-top" alt="post-thumb">

                                        }
                                        else
                                        {
                                            <img src="~/assets/images/post/post-3.jpg" class="card-img-top" alt="post-thumb">

                                        }
                                    </div>
                                    <div class="card-body">
                                        <h3 class="h4 mb-3"><a class="post-title" href="/@url">@item.Title</a></h3>
                                        <ul class="card-meta list-inline">
                                            <li class="list-inline-item">
                                                <a href="author-single.html" class="card-meta-author">
                                                    <img src="~/assets/images/john-doe.jpg">
                                                    <span>Huy Phước</span>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <i class="ti-timer"></i>2 phút đọc
                                            </li>
                                            <li class="list-inline-item">
                                                <i class="ti-calendar"></i>@item.CreatedDate.Value.ToString("dd/MM/yyyy")
                                            </li>
                                            <li class="list-inline-item">
                                                <ul class="card-meta-tag list-inline">
                                                    <li class="list-inline-item"><a href="#">VN</a></li>
                                                    <li class="list-inline-item"><a href="#">TQ</a></li>
                                                </ul>
                                            </li>
                                        </ul>
                                        <p>@Html.Raw(item.SubContents)</p>
                                        <a href="/@url" class="btn btn-outline-primary">Xem thêm</a>
                                    </div>
                                </article>
                            </div>
                        }
                    }


                    </div>
                

            </div>
            <aside class="col-lg-4 @@sidebar">
                <!-- Search -->
                <div class="widget">
                    <h4 class="widget-title"><span>Bạn muốn tìm gì?</span></h4>
                    <form action="#!" class="widget-search">
                        <input class="mb-3" id="search-query" name="s" type="search" placeholder="Nhập và ấn enter...">
                        <i class="ti-search"></i>
                        @*<button type="submit" class="btn btn-primary btn-block">Tìm kiếm</button>*@
                    </form>
                </div>

                @await  Component.InvokeAsync("RecentPostsView")

                <!-- Social -->
